{
  "compilerOptions": {
    "target": "es6", // Actualizado a ES6 para soporte moderno
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx" // Cambiado de "preserve" a "react-jsx" para React 17+
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules", // Asegura que node_modules est√° excluido
    "dist" // Opcional: excluye la carpeta de salida
  ]
}
